{% extends 'base.html.twig' %}

{% block title %}Hello AttractionController!{% endblock %}

{% block body %}

    <h2>New</h2>

    <form method="post">
        <label>
            Name:
            <input type="text" name="name">
        </label>

        <br/>
        <label>
            Short Description:
            <textarea name="short_description"></textarea>
        </label>

        <br/>
        <label>
            Full Description:
            <textarea name="full_description"></textarea>
        </label>

        <br/>
        <label>
            Score:
            <input type="number" name="score" value="0" min="0" max="10">
        </label>

        <br/>
        <input type="submit" value="Submit">

    </form>
{% endblock %}
